        editText = (EditText) findViewById(R.id.edit_text);
    }

	@Override
	public void onClick(View v) {
		// TODO Auto-generated method stub
		switch (v.getId()) {
		case R.id.button:
			// 此处编辑button按钮的点击事件 
			// 通过
			
			break;

		default:
			break;
		}
	}
}
